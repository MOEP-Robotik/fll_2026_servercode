{
    "require": {
        "mailgun/mailgun-php": "^4.3",
        "symfony/http-client": "^8.0",
        "nyholm/psr7": "^1.8",
        "vlucas/phpdotenv": "^5.6",
        "firebase/php-jwt": "^7.0",
        "resend/resend-php": "^1.1"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "autoload": {
        "psr-4": {
            "Core\\": "src/Core/",
            "Database\\": "src/Database/",
            "Models\\": "src/Models/",
            "Services\\": "src/Services/",
            "Controllers\\": "src/Controllers/"
        }
    }
}
